@model IEnumerable<Kursovoi.Models.StoreViewModel>
@{
    ViewData["Title"] = "Магазины";
}

<div class="store-hero text-center mb-4">
    <h1 class="display-5">Магазины</h1>
    <p class="lead">Список магазинов</p>
</div>

<form method="get" class="mb-3">
    <div class="input-group">
        <input type="search" name="q" class="form-control" placeholder="Поиск по магазинам, адресу, городу..." value="@ViewBag.SearchQuery" />
        <button class="btn btn-outline-secondary" type="submit">Поиск</button>
        <a class="btn btn-outline-primary" href="/Stores">Сброс</a>
    </div>
</form>

<div class="row">
    @foreach(var s in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@s.StoreName</h5>
                    <p class="card-text">@s.Address, @s.City</p>
                    <p class="card-text">Тел: @s.Phone</p>
                    <p class="card-text small text-muted">Юр. лицо: @s.LegalPerson</p>
                    <a class="btn btn-sm btn-primary" asp-controller="Stores" asp-action="Details" asp-route-id="@s.StoreID">Посмотреть товары</a>
                </div>
            </div>
        </div>
    }
</div>
