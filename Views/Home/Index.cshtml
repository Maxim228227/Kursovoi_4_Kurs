@model IEnumerable<Kursovoi.Models.ProductViewModel>
@{
    ViewData["Title"] = "Интернет-магазин";

    var source = ViewBag.AllProducts as IEnumerable<Kursovoi.Models.ProductViewModel> ?? Model ?? Enumerable.Empty<Kursovoi.Models.ProductViewModel>();

    var suggestions = new HashSet<string>(StringComparer.OrdinalIgnoreCase);
    var categories = new HashSet<string>(StringComparer.OrdinalIgnoreCase);
    var brands = new HashSet<string>(StringComparer.OrdinalIgnoreCase);
    decimal maxPrice = 0;

    if (source != null)
    {
        foreach (var p in source)
        {
            if (!string.IsNullOrWhiteSpace(p.ProductName)) suggestions.Add(p.ProductName);
            if (!string.IsNullOrWhiteSpace(p.ManufacturerName)) suggestions.Add(p.ManufacturerName);
            if (!string.IsNullOrWhiteSpace(p.CategoryName)) suggestions.Add(p.CategoryName);
            if (!string.IsNullOrWhiteSpace(p.CategoryName)) categories.Add(p.CategoryName);
            if (!string.IsNullOrWhiteSpace(p.ManufacturerName)) brands.Add(p.ManufacturerName);
            if (p.Price > maxPrice) maxPrice = p.Price;
        }
    }

    var req = Context.Request.Query;
    var q = req["q"].FirstOrDefault() ?? string.Empty;
    var selectedCats = req["cat"].ToArray();
    var selectedBrands = req["brand"].ToArray();
    var minStr = req["min"].FirstOrDefault() ?? string.Empty;
    var maxStr = req["max"].FirstOrDefault() ?? string.Empty;
    var instock = req["instock"].FirstOrDefault() ?? string.Empty;
    var sort = req["sort"].FirstOrDefault() ?? string.Empty;

    Func<decimal, string> FormatPrice = price => decimal.Truncate(price) == price ? $"{price:0} Br" : $"{price:0.##} Br";
    Func<decimal, decimal, string> FormatEffective = (price, discount) => FormatPrice(price * (1 - discount/100m));

    bool IsSelected(string[] arr, string val) => arr != null && arr.Any(s => string.Equals(s, val, StringComparison.OrdinalIgnoreCase));
}

<div class="store-hero text-center">
    <h1 class="display-5">Интернет-магазин</h1>
    <p class="lead">Каталог товаров из распределённого сервера. Быстрый поиск и удобные карточки товаров.</p>
</div>

<form method="get" class="mb-3" id="filtersForm">
    <div class="input-group">
        <input type="search" name="q" class="form-control" placeholder="Поиск по товарам, брендам, категориям..." value="@q" list="suggestions" aria-label="Поиск" />
        <button class="btn btn-outline-secondary" type="submit">Поиск</button>
        <button type="button" class="btn btn-outline-primary" id="quickResetBtn">Сброс</button>
    </div>

    <div class="d-flex justify-content-between align-items-center mt-2">
        <div class="text-muted-small">Тут можно быстро найти товар</div>
        <button class="btn btn-filter btn-sm" type="button" data-bs-toggle="collapse" data-bs-target="#filtersCollapse" aria-expanded="false" aria-controls="filtersCollapse">Фильтры ▾</button>
    </div>

    <div class="collapse mt-3" id="filtersCollapse">
        <div class="filters-row">
            <!-- multi-select categories -->
            <label class="visually-hidden" for="filterCat">Категории</label>
            <select name="cat" class="form-select" id="filterCat" multiple size="6">
                @foreach (var c in categories.OrderBy(x => x))
                {
                    <option value="@c" selected="@(IsSelected(selectedCats, c) ? "selected" : null)">@c</option>
                }
            </select>

            <!-- multi-select brands -->
            <label class="visually-hidden" for="filterBrand">Бренды</label>
            <select name="brand" class="form-select" id="filterBrand" multiple size="6">
                @foreach (var b in brands.OrderBy(x => x))
                {
                    <option value="@b" selected="@(IsSelected(selectedBrands, b) ? "selected" : null)">@b</option>
                }
            </select>

            <input type="number" name="min" id="filterMin" class="form-control" placeholder="Мин цена" value="@minStr" min="0" step="0.01" />
            <input type="number" name="max" id="filterMax" class="form-control" placeholder="Макс цена" value="@maxStr" min="0" step="0.01" />

            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="instock" name="instock" checked="@(instock == "on" ? "checked" : null)" />
                <label class="form-check-label" for="instock">В наличии</label>
            </div>

            <select name="sort" class="form-select" id="filterSort">
                <option value="">Сортировать</option>
                <option value="price_asc" selected="@(sort == "price_asc" ? "selected" : null)">Цена ↑</option>
                <option value="price_desc" selected="@(sort == "price_desc" ? "selected" : null)">Цена ↓</option>
                <option value="name_asc" selected="@(sort == "name_asc" ? "selected" : null)">Название ↑</option>
                <option value="name_desc" selected="@(sort == "name_desc" ? "selected" : null)">Название ↓</option>
                <option value="rating_desc" selected="@(sort == "rating_desc" ? "selected" : null)">Рейтинг</option>
            </select>

            <div class="mt-3 d-flex gap-2 filter-buttons">
                <button type="submit" id="applyFiltersBtn" class="btn btn-primary flex-fill">Применить</button>
                <button type="button" id="resetFiltersBtn" class="btn btn-outline-secondary">Очистить</button>
            </div>
        </div>
    </div>
</form>

@if (!string.IsNullOrEmpty(ViewBag.ServerResponse as string))
{
    <div class="alert alert-info">Сервер: @ViewBag.ServerResponse</div>
}

<datalist id="suggestions">
    @foreach (var s in suggestions.OrderBy(x => x))
    {
        <option value="@s"></option>
    }
</datalist>

<div class="mb-3 d-flex justify-content-between align-items-center">
    <div>Найдено товаров: <strong>@(Model?.Count() ?? 0)</strong></div>
    <div class="text-muted-small">Показываются данные из удалённого каталога</div>
</div>

<div class="product-grid">
    @if (Model != null && Model.Any())
    {
        foreach (var p in Model)
        {
            <div class="card store-card">
                <div style="height:160px;">
                    <img src="@p.ImageUrl" class="card-img-top" alt="@p.ProductName" />
                </div>
                <div class="card-body d-flex flex-column">
                    <h6 class="card-title">@p.ProductName</h6>
                    <p class="card-text">@p.Description</p>
                    <div class="small text-muted mb-2">Бренд: @p.ManufacturerName • Категория: @p.CategoryName</div>
                    <div class="mt-auto">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div>
                                @if (p.Discount > 0)
                                {
                                    <div class="price">@FormatEffective(p.Price, p.Discount)</div>
                                    <div class="small text-muted"><s>@FormatPrice(p.Price)</s></div>
                                }
                                else
                                {
                                    <div class="price">@FormatPrice(p.Price)</div>
                                }
                            </div>
                            @if (p.Discount > 0)
                            {
                                <div class="discount text-danger">-@p.Discount%<span class="sr-only"> скидка</span></div>
                            }
                        </div>
                        <div class="card-actions">
                            <form method="post" asp-controller="Cart" asp-action="Add" class="d-inline add-to-cart-form">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="productId" value="@p.ProductID" />
                                <button type="submit" class="btn btn-sm btn-outline-primary add-to-cart-btn">В корзину</button>
                            </form>
                            <a class="btn btn-sm btn-outline-secondary" asp-controller="Home" asp-action="Details" asp-route-id="@p.ProductID">Подробнее</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-warning">Нет данных от сервера.</div>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // ensure quick reset clears search input
            var quickReset = document.getElementById('quickResetBtn');
            if (quickReset) {
                quickReset.addEventListener('click', function(){
                    var f = document.getElementById('filtersForm');
                    if (!f) return;
                    f.querySelector('input[name="q"]').value = '';
                    // do not auto-submit: user can open filters and press Применить
                });
            }

            // reset button inside collapse: clear filter controls but do not submit
            var resetBtn = document.getElementById('resetFiltersBtn');
            if (resetBtn) {
                resetBtn.addEventListener('click', function(){
                    var f = document.getElementById('filtersForm');
                    if (!f) return;
                    // clear all selected options in multi-selects
                    var csel = f.querySelector('select[name="cat"]'); if (csel) { Array.from(csel.options).forEach(function(o){ o.selected = false; }); }
                    var bsel = f.querySelector('select[name="brand"]'); if (bsel) { Array.from(bsel.options).forEach(function(o){ o.selected = false; }); }
                    f.querySelector('input[name="min"]').value = '';
                    f.querySelector('input[name="max"]').value = '';
                    var inst = f.querySelector('input[name="instock"]'); if (inst) inst.checked = false;
                    f.querySelector('select[name="sort"]').selectedIndex = 0;
                    // keep the collapse open so user can press Применить
                });
            }

            // restore simple filter control states from server-side values to avoid visual resetting when collapse toggles
            try {
                var minVal = '@minStr';
                var maxVal = '@maxStr';
                var instVal = '@instock';
                var sortVal = '@sort';
                var f = document.getElementById('filtersForm');
                if (f) {
                    var minIn = f.querySelector('input[name="min"]'); if (minIn) minIn.value = minVal || '';
                    var maxIn = f.querySelector('input[name="max"]'); if (maxIn) maxIn.value = maxVal || '';
                    var instIn = f.querySelector('input[name="instock"]'); if (instIn) instIn.checked = (instVal === 'on');
                    var ssel = f.querySelector('select[name="sort"]'); if (ssel) ssel.value = sortVal || '';
                }
            } catch(e) { }

            // Handle add-to-cart forms via AJAX to provide inline feedback
            document.querySelectorAll('.add-to-cart-form').forEach(function(f) {
                f.addEventListener('submit', function(e) {
                    e.preventDefault();
                    var form = e.currentTarget;
                    var btn = form.querySelector('.add-to-cart-btn');
                    if (!btn) return;
                    var fd = new FormData(form);

                    // indicate loading
                    var origText = btn.textContent;
                    btn.disabled = true;
                    btn.textContent = 'Добавление...';

                    fetch(form.action, {
                        method: 'POST',
                        body: fd,
                        headers: {
                            'X-Requested-With': 'XMLHttpRequest'
                        },
                        credentials: 'same-origin'
                    }).then(function(resp) {
                        if (resp.redirected) {
                            // if server redirected (e.g., to login), follow
                            window.location = resp.url;
                            return null;
                        }
                        return resp.json().catch(function() { return null; });
                    }).then(function(data) {
                        if (!data) return;
                        if (data.redirect) {
                            window.location = data.redirect;
                            return;
                        }
                        if (data.success) {
                            btn.classList.remove('btn-outline-primary');
                            btn.classList.add('btn-outline-success');
                            btn.textContent = 'Добавлено';

                            // update cart count in layout
                            var cartBadge = document.querySelector('.cart-count');
                            if (cartBadge && typeof data.cartCount !== 'undefined') {
                                cartBadge.textContent = data.cartCount;
                            }



                            // restore button after 1.6s
                            setTimeout(function(){
                                btn.classList.remove('btn-outline-success');
                                btn.classList.add('btn-outline-primary');
                                btn.textContent = origText;
                                btn.disabled = false;
                            }, 1600);
                        } else {
                            btn.textContent = 'Ошибка';
                            setTimeout(function(){ btn.textContent = origText; btn.disabled = false; }, 1200);
                        }
                    }).catch(function() {
                        btn.textContent = 'Ошибка';
                        setTimeout(function(){ btn.textContent = origText; btn.disabled = false; }, 1200);
                    });
                });
            });
        });
    </script>
}
