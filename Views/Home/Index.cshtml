@model IEnumerable<Kursovoi.Models.ProductViewModel>
@{
    ViewData["Title"] = "Интернет-магазин";
}

<div class="py-4 text-center">
    <h1 class="display-5">Интернет-магазин</h1>
    <p class="lead">Каталог товаров из распределённого сервера. Нажмите "Обновить" для повторного запроса.</p>
</div>

@if (!string.IsNullOrEmpty(ViewBag.ServerResponse as string))
{
    <div class="alert alert-info">Сервер: @ViewBag.ServerResponse</div>
}

<form method="post" class="mb-3">
    <div class="input-group">
        <input type="text" name="userMessage" class="form-control" placeholder="Отправить команду серверу (например: getproducts)" />
        <button class="btn btn-primary" type="submit">Отправить</button>
    </div>
</form>

<p>Найдено товаров: <strong>@(Model?.Count() ?? 0)</strong></p>

<div class="row">
    @if (Model != null && Model.Any())
    {
        foreach (var p in Model)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="@p.ImageUrl" class="card-img-top" alt="@p.ProductName" style="height:180px; object-fit:contain; background:#f8f9fa;" />
                    <div class="card-body d-flex flex-column">
                        <h6 class="card-title">@p.ProductName</h6>
                        <p class="card-text text-muted small">@p.Description</p>
                        <div class="small text-muted mb-2">Бренд: @p.ManufacturerName • Категория: @p.CategoryName</div>
                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <strong class="fs-6">@p.Price.ToString("C")</strong>
                                @if (p.Quantity > 0)
                                {
                                    <span class="badge bg-success">В наличии: @p.Quantity</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Нет в наличии</span>
                                }
                            </div>
                            <div class="d-grid gap-2 d-md-flex">
                                <a class="btn btn-sm btn-primary me-2" href="#">В корзину</a>
                                <a class="btn btn-sm btn-outline-secondary" href="#">Подробнее</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-warning">Нет данных от сервера.</div>
        </div>
    }
</div>
