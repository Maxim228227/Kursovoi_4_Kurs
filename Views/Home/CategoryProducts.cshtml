@model IEnumerable<Kursovoi.Models.ProductViewModel>
@{
    ViewData["Title"] = "Категория";
    var category = ViewBag.Category as string ?? "";
    Func<decimal, string> FormatPrice = price => decimal.Truncate(price) == price ? $"{price:0} Br" : $"{price:0.##} Br";
}

<div class="store-hero text-center">
    <h1 class="display-5">Категория: @category</h1>
</div>

<div class="product-grid">
    @foreach(var p in Model)
    {
        <div class="card store-card">
            <img src="@p.ImageUrl" class="card-img-top" alt="@p.ProductName" />
            <div class="card-body d-flex flex-column">
                <h6 class="card-title">@p.ProductName</h6>
                <p class="card-text">@p.Description</p>
                <div class="mt-auto d-flex justify-content-between align-items-center">
                    <div class="price">@((p.Discount>0)?(p.Price*(1-p.Discount/100m)).ToString("0.##")+" Br":p.Price.ToString("0.##")+" Br")</div>
                    <div>
                        <a class="btn btn-sm btn-outline-secondary" asp-controller="Home" asp-action="Details" asp-route-id="@p.ProductID">Подробнее</a>
                        <form method="post" asp-controller="Cart" asp-action="Add" class="d-inline add-to-cart-form">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="productId" value="@p.ProductID" />
                            <button type="submit" class="btn btn-sm btn-outline-primary ms-1">В корзину</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.querySelectorAll('.add-to-cart-form').forEach(function(f) {
            f.addEventListener('submit', function(e) {
                e.preventDefault();
                var btn = f.querySelector('button');
                var orig = btn.textContent; btn.disabled = true; btn.textContent = 'Добавление...';
                fetch(f.action, { method: 'POST', body: new FormData(f), headers: { 'X-Requested-With': 'XMLHttpRequest' }, credentials: 'same-origin' })
                .then(r => r.json())
                .then(data => {
                    if (data && data.success) {
                        btn.textContent = 'Добавлено';
                        var cartBtn = document.querySelector('.btn-cart'); if (cartBtn && typeof data.cartCount !== 'undefined') cartBtn.textContent = 'Корзина ('+data.cartCount+')';
                        setTimeout(()=>{ btn.textContent = orig; btn.disabled = false; }, 1600);
                    } else if (data && data.redirect) { window.location = data.redirect; }
                    else { btn.textContent = 'Ошибка'; setTimeout(()=>{ btn.textContent = orig; btn.disabled = false; }, 1200); }
                }).catch(()=>{ btn.textContent = 'Ошибка'; setTimeout(()=>{ btn.textContent = orig; btn.disabled = false; }, 1200); });
            });
        });
    </script>
}
